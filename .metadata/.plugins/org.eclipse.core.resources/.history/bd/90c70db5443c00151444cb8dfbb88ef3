
public class Six {
	int count = 0;//计算最终出列的人数
	/*
	 * 约瑟夫环
	 * n:总人数
	 * m:第m个出列
	 */
	public void getNum(int n, int m,int k)
	{
		int i = 0;
		int[] arr = new int[n];
		for(int j = 0; j < n ; j++)
		{
			arr[j] = j+1;
		}
		while ((n-count)>(m-1))
		{
			
			if( (n-k+1) >= m)
			{
				i = k + m -2;
				arr[i] = 0;
				count++;
			}
			else 
			{
				i = m - n + k -2;
				arr[i] = 0;
				count++;
			}
		}
		System.out.println(count);
		/*
		for(int i = k ; i < n ; i++)
		{
			if( (n-k+1) >= m)
			{
				arr[i ] = 0;
			}
			else 
			{
				i = m - n + k -2;
			}*/
		}
	}
}
